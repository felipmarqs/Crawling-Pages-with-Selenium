from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.remote.webelement import WebElement

#Abrir navegador
driver = webdriver.Firefox()
driver.get('https://pt.wikipedia.org/wiki/Lista_de_campe%C3%B5es_do_futebol_do_Brasil')

#Extrair campeões
ano = driver.find_elements(By.XPATH,'//*[@id="mw-content-text"]/div[1]/table[1]/tbody/tr/td[1]' )
campeoes = driver.find_elements(By.XPATH, '//*[@id="mw-content-text"]/div[1]/table[1]/tbody/tr/td[2]' )

num_page_camps = len(campeoes)

#Imprimir campeões e ano

for i in range(num_page_camps):
    print(ano[i].text)
    print(campeoes[i].text)

driver.close()
